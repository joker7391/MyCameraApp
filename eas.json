{
  "cli": {
    "version": ">= 9.1.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "image": "latest",
        "env": {
          "API_URL": "https://dev.example.com"
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "image": "latest",
        "env": {
          "API_URL": "https://staging.example.com"
        }
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "image": "latest",
        "env": {
          "API_URL": "https://prod.example.com"
        }
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production"
      }
    }
  }
}
